using System;

namespace PrintPyramid
{
    class Program
    {
        static void Main(string[] args)
        {
            int height = 5;

            for (int i = 0; i < height; i++)
            {
                // Print spaces
                for (int j = 0; j < height - i - 1; j++)
                {
                    Console.Write(" ");
                }

                // Print stars
                for (int j = 0; j < 2 * i + 1; j++)
                {
                    Console.Write("*");
                }

                // Move to the next line
                Console.WriteLine();
            }
        }
    }
}
