using System;

namespace TimeOfDayGreeting
{
    class Program
    {
        static void Main(string[] args)
        {
            // You can replace 'DateTime.Now' with any custom date and time for testing purposes
            DateTime currentTime = DateTime.Now;
            int hour = currentTime.Hour;

            // Use only 'if' statements to determine the appropriate greeting
            if (hour >= 5 && hour < 12)
            {
                Console.WriteLine("Good Morning");
            }
            
            if (hour >= 12 && hour < 17)
            {
                Console.WriteLine("Good Afternoon");
            }
            
            if (hour >= 17 && hour < 20)
            {
                Console.WriteLine("Good Evening");
            }
            
            if (hour >= 20 || hour < 5)
            {
                Console.WriteLine("Good Night");
            }
        }
    }
}
